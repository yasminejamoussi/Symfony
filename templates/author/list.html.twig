{% extends 'base.html.twig' %}

{% block title %}Liste des auteurs{% endblock %}
{% block body %}
    <h1>Liste des auteurs</h1>
 
    {% if authors is defined and authors|length > 0 %}
        <ul style="list-style: none;padding: 0;display: flex;flex-wrap: wrap;justify-content: center;">
            {% for author in authors %}
                <li style=" margin: 20px;text-align: center;">
                        <div style="display: flex;flex-direction: column;align-items: center;">
                            <img style="max-width: 100px;max-height: 100px;border-radius: 50%;margin-bottom: 10px;" src="{{ asset(author.picture) }}" alt="{{ author.username }}">
                            <p>{{ author.username | upper }}</p>
                        </div>
                         <a href="{{ path('author_details', {'id': author.id}) }}">Details
                    </a>
                </li>
            {% endfor %}
        </ul>

        <p>Nombre d'auteurs : {{ authors|length }}</p>
        <p>Nombre total de livres : {{ sumOfBooks }}</p>
    {% else %}
        <p>Aucun auteur trouv√©.</p>
    {% endif %}
{% endblock %}